<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/huoyunxieshen"
    >

    <TextView

    android:gravity="center"
        android:text="安全卫士"
        android:layout_width="match_parent"
        android:layout_height="50sp"

        android:textColor="#ffff66"
        android:textSize="30sp"
        android:background="#99cc66"
        />

    <com.lc.mobilesafe.com.lc.uis.Mytextview
        android:singleLine="true"
        android:id="@+id/gundong"
        android:ellipsize="marquee"
        android:text="欢迎下载新版本，新版本内容多多，服务多多.欢迎下载新版本，新版本内容多多，服务多多"
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        />

    <GridView
        android:verticalSpacing="20dp"
        android:paddingTop="60dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gv_item"
        android:numColumns="3"
        />

</LinearLayout>
